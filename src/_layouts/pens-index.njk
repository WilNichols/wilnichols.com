---
layout: page.njk
---
{% from "../_includes/footer.njk" import footer with context %}
{% from "../_includes/header.njk" import header with context %}
{% from "../_includes/post-list.njk" import penList with context %}

<div class="page page--category">
  {{ header() }}
  {% if content -%}
  <div class="about-me">
    {{ content | safe }}
  </div>
  {%- endif %}
  {{ penList(collections[collection], true) }}
  <footer class="footer footer--standalone">
    {{ footer() }}
  </footer>
</div>
