---
layout: page.njk
---
{% from "../_includes/footer.njk" import footer with context%}
{% from "../_includes/header.njk" import header with context %}
{% from "../_includes/post-list.njk" import postList with context %}

<div class="page page--category">
  {{ header() }}
  {% if content -%}
  <div class="about-me">
    {{ content | safe }}
  </div>
  {%- endif %}
  <ol class="posts-list" reversed>
    {{ postList(collections[collection]) }}
  <li class="posts-list__copyright">{{ footer() }}</li>
  </ol>
</div>
