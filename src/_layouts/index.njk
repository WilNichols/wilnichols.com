---
layout: page.njk
---
<header>
  <nav class="root-navigation">
    <h1 class="smalltitle">Wil Nichols</h1>
    <ul>
      <li class="nav__item"><a href="">Notes</a></li>
      <li class="nav__item"><a hredf="">Photography</a></li>
    </ul>
  </nav>
</header>
<ol reversed>
  {% set currentMonth = "" %}
  {% set currentYear = "" %}
  {% for note in collections.notes | reverse %}
    {% set postMonth = note.data.month %}
    {% set postYear = note.data.year %}
    {% if currentMonth != postMonth %}
      <li>{% if currentYear != postYear %}<h2>{{ postYear }}</h2>{% endif %}<h3>{{ postMonth }}</h3></li>
    {% endif %}
    <li><time  datetime="{{ note.date | htmlDateString }}">{{ note.date | readableDate }}</time><a href="{{note.url}}">{{ note.data.title }}</a></li>
    {% set currentMonth = postMonth %}
    {% set currentYear = postYear %}
  {% endfor %}
</ol>
