{% macro macOSGrid(
  path = '',
  class = ''
) %}
  {% set sizes = ['512@2x', '512', '256', '128', '32', '16'] %}
  
  <div class="icon-grid--macOS">
    {% for size in sizes %}
      {% if loop.first %}
        {# We return the 512@2x separately so that it shows on 1x, and hide it at higher densities. #}
        {{  img(
              src = path + size,
              class = 'icon icon--' + size | replace("@", "--"),
              densities = [1]
        ) }}
      {% elif not loop.first %}
        {# Returns 512 - 16 #}
        {{  img(
              src = path + size,
              class = 'icon icon--' + size
        ) }}
      {% endif %}
    {% endfor %}
  </div>  
{% endmacro %}

