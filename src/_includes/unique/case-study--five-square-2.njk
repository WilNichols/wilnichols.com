{% set assetRoot %}https://cdn.wilnichols.com/case-studies/{% endset %}
{% set assetPath %}{{ assetRoot }}five-square-2/screenshots/{% endset %}

{% macro FS2Hero() %}
  {% set screen %}
    <iframe class="screen" src="/assets/embeds/five-square-2/" width="320" height="480" frameborder="0"></iframe>
  {% endset %}
  {% call caseStudyImage(proportionateScale = true) %}
    {{  Device(
          type = 'iPhone4',
          contentType = 'rich',
          content = screen
    ) }}
  {% endcall %}
{% endmacro %}

