{
  "name": "wilnichols.com",
  "version": "0.0.1",
  "description": "Wil's portfolio website",
  "engineStrict": true,
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "start": "ELEVENTY_ENV=dev npm-run-all build:sass --parallel watch:*",
    "netlify-build": "ELEVENTY_ENV=prod NETLIFY=true npm-run-all build:sass build:eleventy build:postcss && rm -rf _tmp && rm -rf _site/_ && npm run build:minify",
    "netlify-build-dev": "ELEVENTY_ENV=dev NETLIFY=true npm-run-all build:sass build:eleventy build:postcss",
    "build": "ELEVENTY_ENV=prod npm-run-all build:sass build:eleventy build:postcss && rm -rf _tmp && npm run build:minify",
    "mv-deps": "cp -R node_modules/@fancyapps/ui/dist/fancybox/ src/static/js/fancybox",
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "sass --watch src/static/css:_tmp",
    "build:sass": "sass src/static/css:_tmp",
    "watch:postcss": "postcss _tmp/*.css -d _site/assets/css/ -w --verbose",
    "build:postcss": "postcss _tmp/styles.css -o _site/assets/css/styles.css -u postcss-import autoprefixer postcss-combine-duplicated-selectors cssnano",
    "build:eleventy": "eleventy",
    "build:minify": " html-minifier --input-dir _site --output-dir _site --file-ext html --remove-comments --collapse-whitespace --minify-js --minify-urls --use-short-doctype"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-footnote": "^4.0.0",
    "sass": "^1.70.0",
    "title-case": "^4.3.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.504.0",
    "autoprefixer": "^10.4.17",
    "aws-sdk": "^2.1550.0",
    "cssnano": "^6.0.3",
    "dotenv": "^16.4.1",
    "fast-average-color-node": "^3.0.0",
    "html-minifier": "^4.0.0",
    "image-size": "^1.1.1",
    "js-beautify": "^1.15.1",
    "luxon": "^3.4.4",
    "markdown-it-title": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^16.0.0",
    "stylelint": "^16.2.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-sass-guidelines": "^11.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.1.0"
  }
}
